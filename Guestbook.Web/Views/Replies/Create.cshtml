@model ReplyInputModel

<div class="edit-message-page">
    <div class="page-header">
        <h1>Reply</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Write a reply to the message</h3>
                </div>
                <div class="panel-body">

                    <form asp-route="Edit">
                        <input type="hidden" asp-for="MessageId" />

                        <fieldset>
                            <div class="form-group">
                                <textarea class="form-control" placeholder="Write your reply" asp-for="Content" autofocus></textarea>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary">Reply</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@model IEnumerable<MessageModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-7">
        <div>
            <h1 class="display-4">Recent Messages</h1>
        </div>
        <br />

        @foreach (var message in Model)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">
                        @message.User.FirstName @message.User.LastName -
                        <span class="small">
                            <time datetime="@message.CreatedAt">@message.CreatedAt.ToString("MMMM dd, yyyy")</time>
                        </span>
                    </h5>
                    <h6 class="card-subtitle mb-2 text-muted">
                        @message.User.Email
                    </h6>
                    <p class="card-text">@message.Content</p>
                    <a asp-controller="Messages"
                       asp-action="Show"
                       asp-route-MessageId="@message.MessageId"
                       class="btn btn-outline-dark">
                        Show Replies
                    </a>
                    <a asp-controller="Messages"
                       asp-action="Edit"
                       asp-route-MessageId="@message.MessageId"
                       class="btn btn-primary">
                        Edit
                    </a>
                    <a asp-controller="Messages"
                       asp-action="Delete"
                       asp-route-MessageId="@message.MessageId"
                       class="btn btn-danger">
                        Delete
                    </a>
               </div>
            </div>
        }
    </div>
    <div class="col-5">
        @if (User.Identity.IsAuthenticated)
        {
            <form method="post" class="sticky-top" style="padding-top: 20px" asp-controller="Messages" asp-action="Add">
                <fieldset>
                    <div class="form-group">
                        <textarea name="Content" rows="5" placeholder="Write a message..." class="form-control"></textarea>
                    </div>
                    <div class="text-right form-group">
                        <button type="submit" class="btn btn-primary ">Submit</button>
                    </div>
                </fieldset>
            </form>
        }
    </div>
</div>

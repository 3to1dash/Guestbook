@model MessageModel

<div class="edit-message-page">
    <div class="page-header">
        <h1>Editing message</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Update your message with new content</h3>
                </div>
                <div class="panel-body">

                    <form asp-route="Edit">
                        <input type="hidden" asp-for="MessageId" />
                        <input type="hidden" asp-for="User.UserId" />

                        <fieldset>
                            <div class="form-group">
                                <textarea class="form-control" placeholder="Write your new message" asp-for="Content" autofocus></textarea>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary">Update</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>